# Environment Variables Template
# Copy this file to .env and update values for your deployment

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=taskplanner123
MONGO_INITDB_DATABASE=task_planner_db

# Backend Configuration
MONGO_URL=mongodb://admin:taskplanner123@mongodb:27017/task_planner_db?authSource=admin
DB_NAME=task_planner_db
JWT_SECRET=your-super-secret-jwt-key-change-in-production-123456789
ENVIRONMENT=production

# Frontend Configuration
REACT_APP_BACKEND_URL=http://localhost:8001

# Nginx Configuration (if using custom domain)
DOMAIN_NAME=localhost

# Security Settings (recommended to change in production)
# Generate strong passwords using: openssl rand -base64 32
MONGODB_ROOT_PASSWORD=your-secure-mongodb-password-here
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here

# Optional: SSL Certificate paths (for HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem